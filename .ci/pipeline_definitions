cc-utils:
  template: 'default'
  base_definition:
    steps:
      pyflakes-lint: ~
      pycodestyle: ~
      test: ~
  variants:
    head_update:
      repos:
      - name: 'gh_pages'
        path: 'gardener/cc-utils'
        branch: 'gh-pages'
      steps:
        generate_documentation:
          publish_to: ['gh_pages']

      traits:
        notifications:
          default:
            on_error:
              triggering_policy: 'only_first'

    pull_request:
      traits:
        pull-request:
          policies:
            require-label: 'reviewed/ok-to-test' # default
            build-forks: true # default
