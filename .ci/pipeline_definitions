cc-utils:
  template: 'default'
  base_definition:
    steps:
      pyflakes-lint: ~
      pycodestyle: ~
    traits:
      version: ~
      component_descriptor: ~
  jobs:
    head-update:
      steps:
        test: ~
      traits:
        notifications:
          default:
            on_error:
              triggering_policy: 'only_first'

    pull-request:
      steps:
        test: ~
      traits:
        pull-request:
          policies:
            require-label: 'reviewed/ok-to-test' # default
            build-forks: true # default

    release_job_image:
      repos:
      - name: 'gh_pages'
        path: 'gardener/cc-utils'
        branch: 'gh-pages'
      steps:
        test: ~
        generate_documentation:
          publish_to: ['gh_pages']
      traits:
        version:
          preprocess: 'finalize'
          inject_effective_version: True
        publish:
          dockerimages:
            job-image:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/cc/job-image'
              dockerfile: 'Dockerfile'
              tag_as_latest: True
        release:
          nextversion: 'bump_minor'
          release_callback: '.ci/bump_job_image_version.py'
          release_notes_policy: disabled

    force_release_job_image:
      repos:
      - name: 'gh_pages'
        path: 'gardener/cc-utils'
        branch: 'gh-pages'
      steps:
        generate_documentation:
          publish_to: ['gh_pages']
      traits:
        version:
          preprocess: 'finalize'
          inject_effective_version: True
        publish:
          dockerimages:
            job-image:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/cc/job-image'
              dockerfile: 'Dockerfile'
              tag_as_latest: True
        release:
          nextversion: 'bump_minor'
          release_callback: '.ci/bump_job_image_version.py'
          release_notes_policy: disabled
