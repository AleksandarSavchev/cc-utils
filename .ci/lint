#!/bin/bash -e

set -e

# usage: $1: <src-dir>

src_dir="${1:-"$(readlink -f "$(dirname "${0}")/..")"}"

echo 'Running pylint for all python modules..'

if python3 $(which pylint3) -j 4 --errors-only \
  ${src_dir}/**/*.py \
  ${src_dir}/*.py; then
    echo 'Linting succeeded'
    exit 0
else
    echo 'Linting found errors (see above)'
    exit 1
fi

